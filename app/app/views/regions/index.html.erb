<p id="notice"><%= notice %></p>

<h1>Regiões</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>DDD</th>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @regions.empty? %>
      <tr>
        <td colspan="4" class="text-center">
          <h3>Sem regiões cadastrados :(</h3>
        </td>
      </tr>
    <% end %>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.ddd %></td>
        <td><%= region.name %></td>
        <td><%= link_to 'Mostrar', region, class:"btn btn-info" %></td>
        <td><%= link_to 'Editar', edit_region_path(region), class:"btn btn-primary" %></td>
        <td><%= button_to 'Apagar', region, method: :delete, data: { confirm: 'Tem certeza?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo', new_region_path, class:"btn btn-primary" %>
